{
  "manifest_version": 2,
  "name": "Amazon Relay Assistant",
  "description": "Productivity toolkit that refreshes, filters and optionally auto-books Amazon Relay loads with actionable insights.",
  "version": "1.1.0",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://relay.amazon.com/*",
        "https://relay.amazon.co.uk/*",
        "https://relay.amazon.it/*",
        "https://relay.amazon.de/*",
        "https://relay.amazon.fr/*",
        "https://relay.amazon.jp/*"
      ],
      "js": [
        "js/plugin_start.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    "assets/img/*.png"
  ]
}
